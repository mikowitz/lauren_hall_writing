!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(name="description" content="")
    %meta(name="author" content="")

    - css_path = static_path(@conn, "/css/app.css")
    %link(rel="stylesheet" href="#{css_path}")
    %script(src="https://code.jquery.com/jquery-2.2.0.min.js")

    %title
      Lauren Hall Writing

  %body
    %main(role="main")
      #main-content
        %nav
          = if @current_user do
            %ul.pager.admin
              %li= "ADMIN - #{@current_user.username}"
              %li= link "Bio", to: bio_path(@conn, :new)
              %li= link "Awards", to: award_path(@conn, :index)
              %li= link "Sign out", to: session_path(@conn, :delete, @current_user), method: "delete"
          - end
          %ul.pager.site-nav
            %li= link "Home", to: "/"
            %li= link "About", to: "/about"
            %li= link "Work", to: "/work"
            %li= link "Awards", to: "/awards"
            %li= link "Contact", to: "/contact"

        = render @view_module, @view_template, assigns

    - js_path = static_path(@conn, "/js/app.js")
    %script(src="#{js_path}")
    <script>require("web/static/js/app").App.run()</script>
